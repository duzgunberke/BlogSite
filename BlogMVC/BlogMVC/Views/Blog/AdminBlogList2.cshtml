@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string color = ""; }
@{int rank = 1; }
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Blog Listesi</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Blog Başlık
                            </th>
                            <th style="width: 10%">
                                Yazar
                            </th>
                            <th style="width: 10%">
                                Beğeni Oranı
                            </th>
                            <th style="width: 6%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            rank = item.BlogRating * 10;
                            if (item.Category.CategoryID == 1)
                            {
                                color = "post-category text-white bg-primary mb-3";
                            }
                            if (item.Category.CategoryID == 2)
                            {
                                color = "post-category text-white bg-warning mb-3";
                            }
                            if (item.Category.CategoryID == 3)
                            {
                                color = "post-category text-white bg-success mb-3";
                            }
                            if (item.Category.CategoryID == 4)
                            {
                                color = "post-category text-white bg-danger mb-3";
                            }
                            if (item.Category.CategoryID == 5)
                            {
                                color = "post-category text-white bg-dark mb-3";
                            }
                            if (item.Category.CategoryID == 6)
                            {
                                color = "post-category text-white bg-info mb-3";
                            }
                            if (item.Category.CategoryID > 6)
                            {
                                color = "post-category text-white bg-info mb-3";
                            }
                        <tr>
                            <td>@item.BlogID </td>
                            <td>
                                @item.BlogTitle
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">
                                    </li>
                                </ul>
                            </td>
                           
                            <td class="project_progress">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: @rank%">
                                    </div>
                                </div>
                                <small>
                                    %@rank
                                </small>
                            </td>
                            <td class="project-state">
                                <span class="badge @color">@item.Category.CategoryName</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-outline-success btn-sm" href="/Blog/BlogDetails/@item.BlogID">
                                    <i class="fas fa-folder">
                                    </i>
                                    Sitede Gör
                                </a>
                                <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Blog/DeleteBlog/@item.BlogID">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>



