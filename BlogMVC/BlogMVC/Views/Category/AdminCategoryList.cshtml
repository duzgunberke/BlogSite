@model IEnumerable<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "AdminCategoryList.cshtml";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string color = ""; }
@{string durum = ""; }
@{string logo = ""; }
@{string buttonColor = ""; }

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategori Listesi</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 10%">
                                ID
                            </th>
                            <th style="width: 5%">
                                Kategori Adı
                            </th>

                            @*<th style="width: 20%">
                                    Blog Değerlendirme
                                </th>*@
                            <th style="width: 10%" class="text-center">
                                Durum
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.CategoryStatus == false)
                            {
                                color = "danger";
                                durum = "Aktif Yap";
                                logo = "far fa-eye";
                                buttonColor = "success";
                            }
                            else if (item.CategoryStatus == true)
                            {
                                color = "success";
                                durum = "Pasif Yap";
                                logo = "fas fa-trash";
                                buttonColor = "danger";
                            }

                            <tr>
                                <td>@item.CategoryID </td>
                                <td>
                                    @item.CategoryName
                                </td>

                                <!--<td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="10" aria-volumemin="0" aria-volumemax="100" style="width:60%">
                                        </div>
                                    </div>
                                    <small>-->
                                @*Aldığı Puan %@item.ca*@
                                <!--ehe
                                    </small>
                                </td>-->
                                <td class="project-state">
                                    <span class="badge badge-@color ">@item.CategoryStatus</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogByCategory/@item.CategoryID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Category/CategoryEdit/@item.CategoryID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    
                                    
                                    <a class="btn btn-@buttonColor btn-sm" href="/Category/CategoryDelete/@item.CategoryID">
                                        <i class="@logo">
                                        </i>
                                        @durum
                                    </a>

                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>

                </div>
            </div>
        </section>
        <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Kategori Ekle</button>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Yeni Kategori Ekleme</h2>
                    </div>
                    <form method="post" action="/Category/AdminCategoryAdd/">
                        <div class="modal-body">
                            <label>Kategori Adı</label>
                            <input type="text" name="CategoryName" class="form-control" />
                            <br />
                            <label>Kategori Açıklama</label>
                            <input type="text" name="CategoryDescription" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Kaydet</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </body>
</html>


